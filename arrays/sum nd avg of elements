find sum and avg of all elements in an array.


import java.util.*;
class Snda{
  public static void main(String args[]){
    Scanner s=new Scanner(System.in);
    int n=s.nextInt();
    int[] a= new int[n];
    int sum=0;

    for(int i=0; i<a.length; i++){
      a[i]=s.nextInt();
    }
    
    for(int i=0; i<a.length; i++){
      sum=sum+a[i];
    }
    
    int avg=sum/n;
    
    System.out.println("sum of given array: "+sum);
    System.out.println("avg of given array: "+avg);

  }
}
    



    
