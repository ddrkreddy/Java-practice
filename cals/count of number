import java.util.*;
class Main{
  public static void main(String args[]){
    Scanner s=new Scanner(System.in);
    int n=s.nextInt();
    int c=0,sum=0,rev=0;
    while(n>0){
     int digit=n%10;
     c++;
     sum=sum+digit;
     rev=rev*10 + digit;
     n=n/10;
    }
    System.out.println("sum of given number : "+sum);
    System.out.println("reverse of given number : "+rev);
    System.out.println("count of given number : "+c);
    
  }
}
